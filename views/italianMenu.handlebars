<!------------pizza lists starts-------------------->

<div class="container-fluid dynamic">
    <div class="row no-gutters">
      {{#each italianMenuData}}
        <div class="col-lg-2">
            <div class="box1">
                <img src="../img/listPizza2.jpg" alt="">
                <h3 class="food-name">{{food_name}}</h3>
                <h3 class="food-price">{{food_price}}</h3>
                <ul class="icon">
                    <li><a><i href=".modal" class="add-to-cart-btn fas fa-shopping-cart" data-toggle='modal'
                                id="{{food_name}}" data-what={{food_name}} data-restaurants_id={{restaurants_id}} data-id={{id}} data-price={{food_price}} >
                            </i></a href="#myModal">
                    </li>

                </ul>
            </div>
        </div>

        <div class="col-lg-2">
            <div class="box-black">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{food_name}}</h5>
                        <p class="card-text">San Marzano tomatoes, mozzarella cheese, fresh basil, salt and
                            extra-virgin olive oil.</p>
                        <div class="btn-container">
                          <a href=".modal" data-toggle='modal'> <button class="btn standard-btn card-link" >Add To Cart</button></a> 
                        </div>
                    </div>
                </div>
            </div>
          </div>
        {{/each}}
    
    </div> 
</div>




